@model List<Scores>
@{
    ViewData["Title"] = "Scores Page";
}
<div class="text-center">
    <h1 class="display-4 font-weight-bold">King of Horror</h1>
</div>

<h2 class="text-center">Scores</h2>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
               Username
            </th>
            <th>
               Score
            </th>
            <th>
               Ranking
            </th>
            <th>
                Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Score
                </td>
                <td>
                    @item.Ranking
                </td>
                <td>
                    @item.Date
            </tr>
        }
    </tbody>
</table>


